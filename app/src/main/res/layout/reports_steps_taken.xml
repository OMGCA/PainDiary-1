<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/congrats_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Congratulations! You have completed today's goal steps."
        android:textColor="#1DDE7D"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/steps_taken_pie"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/steps_taken_pie" />

    <com.github.mikephil.charting.charts.PieChart
        android:id="@+id/steps_taken_pie"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible">


    </com.github.mikephil.charting.charts.PieChart>
</androidx.constraintlayout.widget.ConstraintLayout>